{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        },
        "digest": {
          "type": "string",
          "pattern": "^sha256:[a-fA-F0-9]{64}$"
        }
      },
      "required": ["repository"],
      "anyOf": [
        { "required": ["tag"] },
        { "required": ["digest"] }
      ]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "hosts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "pattern": "^(([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9-]*[A-Za-z0-9])\\.)+([A-Za-z]{2,})$"
              }
            },
            "required": ["host"]
          }
        }
      },
      "required": ["enabled", "hosts"]
    },
    "gpuExternalName": {
      "type": "object",
      "properties": {
        "useHeadless": { "type": "boolean" },
        "host": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["useHeadless"],
      "allOf": [
        {
          "if": {
            "properties": { "useHeadless": { "const": true } }
          },
          "then": {
            "not": {
              "required": ["host"]
            }
          },
          "else": {
            "required": ["host"]
          }
        }
      ]
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": ["port"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "patternProperties": {
            ".+": { "type": "string" }
          }
        },
        "limits": {
          "type": "object",
          "patternProperties": {
            ".+": { "type": "string" }
          }
        }
      },
      "required": ["requests", "limits"]
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "alerts": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    }
  },
  "required": ["image", "ingress", "gpuExternalName", "service", "resources"]
}
