{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        },
        "digest": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      },
      "required": [
        "repository"
      ],
      "anyOf": [
        {
          "required": [
            "tag"
          ],
          "properties": {
            "tag": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "required": [
            "digest"
          ],
          "properties": {
            "digest": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "digest": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "digest"
            ]
          },
          "then": {
            "properties": {
              "digest": {
                "type": "string",
                "pattern": "^sha256:[0-9a-fA-F]{64}$"
              }
            }
          }
        }
      ]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "hosts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "pattern": "^relay\\.([A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?\\.)+[A-Za-z]{2,}$"
              }
            },
            "required": [
              "host"
            ],
            "additionalProperties": true
          }
        },
        "annotations": {
          "type": "object",
          "properties": {
            "cert-manager.io/cluster-issuer": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": true
        },
        "tls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "secretName": {
                "type": "string",
                "minLength": 1
              },
              "hosts": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "pattern": "^relay\\.([A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?\\.)+[A-Za-z]{2,}$"
                }
              }
            },
            "required": [
              "secretName",
              "hosts"
            ],
            "additionalProperties": true
          }
        }
      },
      "required": [
        "enabled",
        "hosts"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "enabled": {
                "const": true
              }
            }
          },
          "then": {
            "required": [
              "annotations",
              "tls"
            ],
            "properties": {
              "annotations": {
                "required": [
                  "cert-manager.io/cluster-issuer"
                ]
              },
              "tls": {
                "minItems": 1
              }
            }
          }
        }
      ]
    },
    "gpuExternalName": {
      "type": "object",
      "properties": {
        "useHeadless": {
          "type": "boolean"
        },
        "host": {
          "type": "string",
          "pattern": "^([A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?)(\\.[A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?)*$"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": [
        "useHeadless"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "useHeadless": {
                "const": true
              }
            },
            "required": [
              "useHeadless"
            ]
          },
          "then": {
            "not": {
              "required": [
                "host"
              ]
            }
          },
          "else": {
            "if": {
              "properties": {
                "headless": {
                  "properties": {
                    "enabled": {
                      "const": true
                    }
                  },
                  "required": [
                    "enabled"
                  ]
                }
              },
              "required": [
                "headless"
              ]
            },
            "then": {
              "not": {
                "required": [
                  "host"
                ]
              }
            },
            "else": {
              "required": [
                "host"
              ]
            }
          }
        }
      ]
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": [
        "port"
      ]
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            ".*": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "limits": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            ".*": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "required": [
        "requests",
        "limits"
      ]
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "alerts": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "podSecurityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean",
          "const": true
        },
        "runAsUser": {
          "type": "integer",
          "const": 1000
        },
        "runAsGroup": {
          "type": "integer",
          "const": 1000
        },
        "fsGroup": {
          "type": "integer",
          "const": 1000
        },
        "seccompProfile": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "RuntimeDefault"
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "runAsNonRoot",
        "runAsUser",
        "runAsGroup",
        "fsGroup",
        "seccompProfile"
      ],
      "additionalProperties": false
    },
    "securityContext": {
      "type": "object",
      "properties": {
        "runAsNonRoot": {
          "type": "boolean",
          "const": true
        },
        "runAsUser": {
          "type": "integer",
          "const": 1000
        },
        "allowPrivilegeEscalation": {
          "type": "boolean",
          "const": false
        },
        "readOnlyRootFilesystem": {
          "type": "boolean",
          "const": true
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "drop": {
              "type": "array",
              "items": {
                "type": "string",
                "const": "ALL"
              },
              "minItems": 1
            }
          },
          "required": [
            "drop"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "runAsNonRoot",
        "runAsUser",
        "allowPrivilegeEscalation",
        "readOnlyRootFilesystem",
        "capabilities"
      ],
      "additionalProperties": false
    },
    "networkPolicy": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "allowDNS": {
          "type": "boolean"
        },
        "extraIngress": {
          "type": "array"
        },
        "extraEgress": {
          "type": "array"
        },
        "externalNameCIDR": {
          "type": "string",
          "pattern": "^((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.){3}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])/(3[0-2]|[12]?[0-9])$",
          "not": {
            "const": "0.0.0.0/0"
          }
        }
      },
      "required": [
        "enabled",
        "allowDNS",
        "extraIngress",
        "extraEgress",
        "externalNameCIDR"
      ],
      "additionalProperties": true
    }
  },
  "required": [
    "image",
    "ingress",
    "gpuExternalName",
    "service",
    "resources",
    "podSecurityContext",
    "securityContext",
    "networkPolicy"
  ]
}
