{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "tag": {
          "type": "string"
        },
        "digest": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string"
        }
      },
      "required": ["repository"],
      "anyOf": [
        {
          "required": ["tag"],
          "properties": {
            "tag": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        {
          "required": ["digest"],
          "properties": {
            "digest": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "digest": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["digest"]
          },
          "then": {
            "properties": {
              "digest": {
                "type": "string",
                "pattern": "^sha256:[0-9a-fA-F]{64}$"
              }
            }
          }
        }
      ]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "hosts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "pattern": "^([A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?\.)+[A-Za-z]{2,}$"
              }
            },
            "required": ["host"],
            "additionalProperties": true
          }
        }
      },
      "required": ["enabled", "hosts"]
    },
    "gpuExternalName": {
      "type": "object",
      "properties": {
        "useHeadless": {
          "type": "boolean"
        },
        "host": {
          "type": "string",
          "pattern": "^([A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?)(\.[A-Za-z0-9]([-A-Za-z0-9]*[A-Za-z0-9])?)*$"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": ["useHeadless"],
      "allOf": [
        {
          "if": {
            "properties": {
              "useHeadless": {
                "const": true
              }
            },
            "required": ["useHeadless"]
          },
          "then": {
            "not": {
              "required": ["host"]
            }
          },
          "else": {
            "required": ["host"]
          }
        }
      ]
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      },
      "required": ["port"]
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            ".*": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "limits": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            ".*": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "required": ["requests", "limits"]
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "alerts": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  },
  "required": ["image", "ingress", "gpuExternalName", "service", "resources"]
}

