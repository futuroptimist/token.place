{
  "appId": "com.tokenplace.desktop",
  "productName": "tokenplace Desktop",
  "files": ["dist/**/*"],
  "directories": {
    "buildResources": "assets"
  },
  "mac": {
    "target": ["dmg", "pkg"],
    "icon": "assets/icon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "msi",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "Utility"
  }
}
